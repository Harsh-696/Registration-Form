<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_marginBottom="10dp"
    tools:context=".MainActivity"
    android:id="@+id/first_layout">

    <TextView
        android:id="@+id/registrationForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Registration Form"
        android:textSize="22dp"
        android:textColor="#7BC6CC"
        android:textStyle="bold|italic"
        />
    <EditText
        android:id="@+id/edit"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_below="@+id/registrationForm"
        android:background="@drawable/input_design"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_username"
        android:paddingStart="10dp"
        android:hint="Username"
        android:textSize="18dp"
        android:drawablePadding="10dp"
        android:inputType="textAutoCorrect"
        />
    <EditText
        android:id="@+id/edit2"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edit"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_design"
        android:drawableStart="@drawable/ic_fullname"
        android:paddingStart="10dp"
        android:drawablePadding="10dp"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:hint="Full Name"
        android:inputType="textAutoCorrect"/>

    <EditText
        android:id="@+id/edit3"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edit2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_design"
        android:drawableStart="@drawable/ic_phone_number"
        android:paddingStart="10dp"
        android:drawablePadding="10dp"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:hint="Phone"
        android:inputType="phone"
        android:maxLength="14" />

    <EditText
        android:id="@+id/edit4"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edit3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_design"
        android:drawableStart="@drawable/ic_email"
        android:paddingStart="10dp"
        android:drawablePadding="10dp"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edit5"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edit4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_design"
        android:drawableStart="@drawable/ic_password"
        android:paddingStart="10dp"
        android:drawablePadding="10dp"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/edit6"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edit5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_design"
        android:drawableStart="@drawable/ic_confirmpassword"
        android:paddingStart="10dp"
        android:drawablePadding="10dp"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@id/edit6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#7bc6cc"
        android:text="Submit"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/display_Btn"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/submit_btn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#7bc6cc"
        android:text="Display Data"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/update_Btn"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/display_Btn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#7bc6cc"
        android:text="Update Data"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

</RelativeLayout>